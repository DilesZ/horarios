{
  "name": "horarios",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build:css": "tailwindcss -i ./src/styles.css -o ./dist/tailwind.css --minify",
    "build:js": "babel ./src/app.jsx --out-file ./dist/app.js --presets @babel/preset-react",
    "build": "npm run build:css && npm run build:js && mkdir -p dist && cp ./index.html ./dist/index.html && cp ./favicon.* ./dist/ && cp ./logo.png ./dist/"
  },
  "devDependencies": {
    "@babel/cli": "^7.24.7",
    "@babel/core": "^7.24.7",
    "@babel/preset-react": "^7.24.7",
    "@babel/plugin-transform-react-jsx": "^7.24.7",
    "tailwindcss": "^3.4.10"
  }
}